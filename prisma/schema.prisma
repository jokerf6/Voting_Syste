datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String  @id @default(uuid())
  name          String
  Gender        gender
  Email         String
  Mobile        String
  Password      String
  Role          roles   @default(USER)
  image         String  @default("https://res.cloudinary.com/lms07/image/upload/v1645954589/avatar/6214b94ad832b0549b436264_avatar1645954588291.png")
  age           Int
  emailVerified Boolean @default(false)
  usersID       usersId @relation(fields: [IDNumber], references: [id])
  IDNumber      String
  Token         Token[]
  secret        secret?
}

model Token {
  id        String   @id @default(uuid())
  userId    String
  createdAt DateTime @default(now())
  valid     Boolean  @default(true)
  user      User     @relation(fields: [userId], references: [id])
}

model secret {
  userId    String     @unique
  url       String     @id
  code      String
  type      secretType @default(EMAIL_VERIFICATION)
  user      User       @relation(fields: [userId], references: [id])
  createdAt DateTime   @default(now())
}

enum secretType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

model usersId {
  id   String  @id
  used Boolean @default(false)
  user User[]
}

enum roles {
  CANDIDATE
  USER
  ADMIN
}

enum gender {
  Male
  Female
}
